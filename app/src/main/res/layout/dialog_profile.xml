<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtUploadImg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textSize="50px"
        android:text="Upload a photo" />

    <TextView
        android:id="@+id/txtTakePhoto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUploadImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:drawablePadding="5dp"
        android:paddingEnd="10dp"
        android:textSize="50px"
        android:paddingStart="10dp"
        android:text="Take a Photo" />

    <TextView
        android:id="@+id/tvTakePhotoCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtTakePhoto"
        android:layout_alignRight="@+id/txtTakePhoto"
        android:layout_below="@+id/txtTakePhoto"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="cancel"
        android:textColor="#ff3300"
        android:textSize="20sp" />

</RelativeLayout>